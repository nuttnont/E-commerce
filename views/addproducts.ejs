<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>แบบฟอร์มบันทึกสินค้า</title>
    <style>
        #price{
        font-size : 50px;
        }
    </style>

    
</head>
<body>
    <%- include Navbar %> 
    <div class="container">
        <div class="row">
          
            <div class="col-lg-12 my-4">
                <h2 align="center">แบบฟอร์มบันทึกสินค้า</h2>
                <% if(locals.errors){ %>
                    <ul class="alert alert-danger" role="alert">
                        <% Object.values(errors).forEach(function(error){%>
                            <li><%= error.msg %></li>
                        <% }) %> 
                    </ul>
                <% } %>
                <form  class="" action="/products/add" method="post">
                    <div class="form-group my-4">
                        <label for="">ชื่อสินค้า</label>
                        <input type="text" name="name" value="" class="form-control">
                    </div>
                    <div class="form-group my-4" id="price">
                        <label for="">ราคา</label>
                        <input type="number" name="price" value="" min=1 class="form-control">
                    </div>
                    <div class="form-group my-4" >
                        <label for="">ภาพสินค้า</label>
                        <input type="text" name="image" value=""  class="form-control">
                    </div>
                    <div class="form-group my-4">
                        <label for="">หมวดหมู่</label>
                        <select class="form-control" name="category">
                            <% category.forEach(function(category){ %> 
                                <option value="<%= category.title %>"><%= category.title %> </option>
                            <% }) %> 

                        </select>
                    </div>
                    <div class="form-group my-4">
                        <label for="">รายละเอียด</label>
                        <textarea  name="description" rows="4" cols="80" value="" class="form-control"></textarea>
                    </div>
                        <input type="submit" name="submit" value="บันทึกข้อมูล" class="btn btn-success">
                </form>
            </div>
        </div>
    </div>
</body>
</html>